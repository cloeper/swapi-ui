{
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "rules": {
    "semi": [2, "never"],
    "comma-style": [2, "last"],
    "comma-dangle": [2, "always-multiline"],
    "strict": [2, "never"],
    "indent": [2, 2],

    "babel/generator-star-spacing": 1,
    "babel/new-cap": 1,
    "babel/object-curly-spacing": 1,
    "babel/object-shorthand": 1,
    "babel/arrow-parens": 1,

    "react/display-name": 1,
    "react/jsx-closing-bracket-location": 1,
    "react/no-danger": 1,
    "react/no-set-state": 1,
    "react/prop-types": 1,
    "react/sort-comp": 1,
  }
}
